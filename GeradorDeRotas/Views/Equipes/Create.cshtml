@model Models.Equipe

@{
	ViewData["Title"] = "Equipe";
}
<div style="text-align: center">
	<h2 style="padding-top:20px">Criar Equipe</h2>

	<div class="row justify-content-md-center">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					Nome da Equipe
					<input asp-for="NomeEquipe" class="form-control" />
					<span asp-validation-for="NomeEquipe" class="text-danger"></span>
				</div>

				<div class="form-group">
					Pessoas
					@Html.ListBox("Cpfs", ViewBag.Pessoas, new { @class = "form-control", id = "multiSelectDropDown", multiple = "multiple" })
				</div>
				<div class="form-group">
					Cidade
					@Html.DropDownListFor(model => model.Cidade, ViewBag.Cidades as SelectList, "Selecione...", new{ @class = "form-control" })
				</div>
				<div class="form-group">
					<a asp-action="Index" style="margin-right:20px">Voltar</a>
					<input type="submit" value="Criar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@if(TempData["equipeInvalida"] != null){
		<script src="~/js/camposObrigatorios.js "></script>
	}

	@if(TempData["equipeSucesso"] != null){
		<script src="~/js/equipeValida.js"></script>
	}

    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}