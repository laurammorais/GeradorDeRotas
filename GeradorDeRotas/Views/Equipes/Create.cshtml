@model GeradorDeRotas.Models.Equipe

@{
	ViewData["Title"] = "Create";
}
<div style="text-align: center">
	<h2 style="padding-top:20px">Criar Equipe</h2>

	<div class="row justify-content-md-center">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					Nome da Equipe
					<input asp-for="NomeEquipe" class="form-control" />
					<span asp-validation-for="NomeEquipe" class="text-danger"></span>
				</div>

				<div class="form-group">
					Pessoas
					@Html.ListBox("Cpfs", ViewBag.Pessoas, new { @class = "form-control", id = "multiSelectDropDown", multiple = "multiple" })
				</div>
				<div class="form-group">
					Serviço
					@Html.DropDownListFor(model => model.Servico, ViewBag.Servicos as SelectList, "Selecione...", new{ @class = "form-control" })
				</div>
				<div class="form-group">
					<label asp-for="Cidade" class="control-label"></label>
					<select asp-for="Cidade" id="Cidade" class="form-control">
						<option value="">Selecione um serviço primeiro...</option>
					</select>
					<span asp-validation-for="Cidade" class="text-danger"></span>
				</div>
				<div class="form-group">
					<a asp-action="Index" style="margin-right:20px">Voltar</a>
					<input type="submit" value="Criar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {

<script src="~/js/cidade.js"></script>
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}