@model GeradorDeRotas.Models.Equipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar esta equipe?</h3>
<div>
    <h4>Equipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeEquipe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeEquipe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Servico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Servico)
        </dd>
        @foreach (var item in Model.Pessoas)
		{
			<dd class="col-sm-6">
				@Html.DisplayFor(modelItem => item.Nome);
			</dd>
		}
    </dl>
    
    <form asp-action="ConfirmDelete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
