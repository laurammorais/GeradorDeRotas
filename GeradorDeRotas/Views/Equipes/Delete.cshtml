@model GeradorDeRotas.Models.Equipe

@{
	ViewData["Title"] = "Delete";
}

<div style="text-align: center; margin-top:100px">
	<h3>Remover</h3> 
	<h4>Tem certeza que deseja remover esta equipe?</h4>

	<div style="padding-top:20px">
		<dl class="row">
			<dt class="col-sm-6" style="text-align:right">
				Nome da Equipe
			</dt>
			<dd class="col-sm-6" style="text-align:left">
				@Html.DisplayFor(model => model.NomeEquipe)
			</dd>
			<dt class="col-sm-6" style="text-align:right">
				@Html.DisplayNameFor(model => model.Cidade)
			</dt>
			<dd class="col-sm-6" style="text-align:left">
				@Html.DisplayFor(model => model.Cidade)
			</dd>
			<dt class="col-sm-6" style="text-align:right">
				@Html.DisplayNameFor(model => model.Servico)
			</dt>
			<dd class="col-sm-6" style="text-align:left">
				@Html.DisplayFor(model => model.Servico)
			</dd>
			<dt class="col-sm-6" style="text-align:right">
				@Html.DisplayNameFor(model => model.Pessoas)
			</dt>
			<div style="padding-left:15px">
				@foreach (var item in Model.Pessoas)
				{

				<dd style="text-align:left">
						@Html.DisplayFor(modelItem => item.Nome);
				</dd>
				}
			</div>
			<a asp-action="Index"  class="col-sm-6" style="text-align:right">Voltar</a>
			<form class="col-sm-6" style="text-align: left" asp-action="Delete">
			<input type="submit" value="Confirmar" class="btn btn-primary" />
		</form>
		</dl>
		
	</div>
</div>
