@model IEnumerable<GeradorDeRotas.Models.Equipe>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Novo</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				Nome da equipe
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Servico)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.NomeEquipe)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Servico)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
