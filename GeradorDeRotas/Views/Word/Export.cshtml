@{
	ViewData["Title"] = "Export";
}

<h2 style="text-align:center; margin:150px 0 30px 0">Exportar Arquivo Word</h2>

<div class="row">
	<div class="col-md-12" style="text-align:center">
		<form asp-action="Export">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				@Html.ListBox("Rotas", ViewBag.Rotas, new { @class = "form-control", id = "multiSelectDropDown", multiple = "multiple" })
			</div>
			<div class="form-group">
				<input type="submit" value="Exportar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {

	@if(TempData["rotasInvalidas"] != null){
		<script src="~/js/exportFailed.js"></script>
	}

    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}