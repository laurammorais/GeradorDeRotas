@model IEnumerable<Models.Pessoa>

@{
	ViewData["Title"] = "Pessoa";
}
<div style="text-align: center">
	<h2>Pessoas</h2>

	<p>
		<a asp-action="Create">Criar nova pessoa</a>
	</p>
</div>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cpf)
			</th>
			<th>
				Disponível
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cpf)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Disponivel)
				</td>
				<td style="color: #ff6f9c">
					<a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
					<button class="btn btn-primary" onclick="confirmDelete('@item.Id')">Deletar</button>
				</td>
			</tr>
		}
	</tbody>
</table>

@section Scripts {
		<script src="~/js/deletePessoa.js"></script>
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
