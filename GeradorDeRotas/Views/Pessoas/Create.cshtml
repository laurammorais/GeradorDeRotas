@model GeradorDeRotas.Models.Pessoa

@{
	ViewData["Title"] = "Create";
}
<div style="text-align: center">
	<h2 style="padding-top:100px">Criar Pessoa</h2>

	<div class="row justify-content-md-center">
		<div class="col-md-4">
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Nome" class="control-label"></label>
					<input asp-for="Nome" class="form-control" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="control-label">CPF</label>
					<input autocomplete="off" id="cpf" asp-for="Cpf" class="form-control" style="" />
					<span asp-validation-for="Cpf" class="text-danger"></span>
					<span class="text-danger">@TempData["cpfInvalido"]</span>
					<span class="text-danger">@TempData["cpfCadastrado"]</span>
				</div>
				<a asp-action="Index" style="margin-right:20px">Voltar</a>
				<input type="submit" value="Criar" class="btn btn-primary" />
			</form>
		</div>
	</div>
</div>

@section Scripts {

	<script src="~/js/cpf.js"></script>

    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
