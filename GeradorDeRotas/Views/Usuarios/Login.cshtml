@model Models.Usuario

@{
	ViewData["Title"] = "Login";
}
<div style="text-align: center; margin-top: 80px">
	<h2>Entrar</h2>

	<div style="margin-top: 20px" class="row justify-content-md-center">
		<div class="col-md-4">
			<form asp-action="Login">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					Login
					<input autocomplete="off" asp-for="Username" class="form-control" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Senha" class="control-label"></label>
					<input asp-for="Senha" type="password" class="form-control" />
					<span asp-validation-for="Senha" class="text-danger"></span>
				</div>
				<div class="form-group">
					<a asp-action="Registrar">Clique aqui para se registrar</a>
				</div>
				<div class="form-group">
					<input type="submit" value="Entrar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	@if(TempData["loginFalha"] != null)
	{
		<script src="~/js/loginFailed.js"></script>
	}
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}