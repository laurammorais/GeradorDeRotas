@{
	ViewData["Title"] = "Importar Arquivo";
}

@using (Html.BeginForm("Index", "Excel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
		<h2 style="text-align:center; margin:150px 0 30px 0;">Importar Rotas</h2>
		<div class="col-md-12" style="text-align:center;  align-items:center; ">
			<div class="form-group">
				<input style="width:350px; margin: 0 auto;" class="form-control" accept=".xlsx, .xls" type="file" name="file" />
			</div>
			<div class="form-group">
				<input type="submit" value="Importar" class="btn btn-primary" />
			</div>
		</div>
}

@section Scripts {

	@if(TempData["arquivoSucesso"] != null){
		<script src="~/js/importSuccess.js"></script>
	}

	@if(TempData["arquivoInvalido"] != null){
		<script src="~/js/importFailed.js"></script>
	}

    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}